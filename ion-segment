import { Component , } from '@angular/core';
import { AlertController, ActionSheetController, ToastController, LoadingController, IonHeader, IonToolbar, IonTitle, IonContent, IonItem, IonLabel, IonFooter, IonIcon, IonItemDivider, IonList, IonItemSliding, IonItemOption, IonItemOptions, IonImg, IonAvatar, IonThumbnail, IonSpinner, IonSkeletonText, IonProgressBar, IonRefresher, IonRefresherContent, IonButton, IonInput, IonTextarea, IonCheckbox, IonToggle, IonSelect, IonSelectOption, IonRadioGroup, IonRadio, IonListHeader, IonDatetime, IonSegment, IonSegmentButton } from '@ionic/angular/standalone';
import { CommonModule, NgForOf, NgIf } from '@angular/common';
import { FormsModule } from '@angular/forms';
import { Icon } from 'ionicons/dist/types/components/icon/icon';
@Component({
  selector: 'app-home',
  templateUrl: 'home.page.html',
  styleUrls: ['home.page.scss'],
  imports: [IonListHeader, IonRadio, IonRadioGroup, FormsModule, IonButton, IonItemOptions, IonFooter, IonLabel, IonItem, IonHeader, IonToolbar, IonTitle, IonContent, IonIcon, IonItemDivider, IonList, IonItemSliding, IonItemOption, NgForOf, IonImg, IonAvatar, IonThumbnail, IonSpinner, NgIf, IonSkeletonText, IonProgressBar, IonRefresher, IonRefresherContent, IonInput, IonTextarea, IonCheckbox, IonToggle, IonSelect, IonSelectOption, IonDatetime, IonSegment, IonSegmentButton],
})
export class HomePage {
 slectedSegment;
  segmentChanged(ev){
    console.log(ev.target.value)
    this.slectedSegment=ev.target.value;
  }
  



  constructor() {}


}


---------main.ts------------

import { bootstrapApplication } from '@angular/platform-browser';
import { RouteReuseStrategy, provideRouter, withPreloading, PreloadAllModules } from '@angular/router';
import { IonicRouteStrategy, provideIonicAngular } from '@ionic/angular/standalone';

import { routes } from './app/app.routes';
import { AppComponent } from './app/app.component';
import{ addIcons} from 'ionicons'
import {person, call,mailOutline ,closeCircle,play,share,heart,chatbox , chatboxEllipsesOutline,people } from 'ionicons/icons';
addIcons({person ,call,mailOutline ,closeCircle,play,share,heart,chatbox,chatboxEllipsesOutline, people });
bootstrapApplication(AppComponent, {
  providers: [
    { provide: RouteReuseStrategy, useClass: IonicRouteStrategy },
    provideIonicAngular(),
    provideRouter(routes, withPreloading(PreloadAllModules)),
  ],
});

