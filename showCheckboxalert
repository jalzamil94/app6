------------------------------------home.ts----------------
import { call, text } from 'ionicons/icons';
import { Component , } from '@angular/core';
import {AlertController,ActionSheetController, ToastController, LoadingController,IonHeader, IonToolbar, IonTitle, IonContent, IonItem, IonLabel, IonFooter, IonIcon, IonItemDivider, IonList, IonItemSliding, IonItemOption, IonItemOptions, IonImg, IonAvatar, IonThumbnail, IonSpinner, IonSkeletonText, IonProgressBar, IonRefresher, IonRefresherContent, IonButton } from '@ionic/angular/standalone';
import { CommonModule, NgForOf, NgIf } from '@angular/common';
import { Icon } from 'ionicons/dist/types/components/icon/icon';
@Component({
  selector: 'app-home',
  templateUrl: 'home.page.html',
  styleUrls: ['home.page.scss'],
  imports: [IonButton,  IonItemOptions, IonFooter, IonLabel, IonItem, IonHeader, IonToolbar, IonTitle, IonContent, IonIcon, IonItemDivider, IonList, IonItemSliding, IonItemOption, NgForOf, IonImg, IonAvatar, IonThumbnail, IonSpinner, NgIf, IonSkeletonText, IonProgressBar, IonRefresher, IonRefresherContent],
})
export class HomePage {
 
  constructor(private alertctrl:AlertController
  ) {}
async showCheckboxalert(){
  let loading=await this.alertctrl.create({
    header:'checkbox',
    message:'choose your hobbies',
    
    inputs:[
      {
      
      type:'checkbox',
      label:'swimming',
       value:'sw'
      },
      {
       type:'checkbox',
       label:'football',
       value:'fb'
      }
    ],
    buttons:[
      {
        text:'cancel',
        role:"cancel"
      },
      {
        text:'save',
        handler:(data)=>{
          console.log('user logged',data);
        }
      }
    ]
  });
  await loading.present();
}
}
